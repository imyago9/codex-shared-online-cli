# Network
HOST=127.0.0.1
PORT=3000

# Authentication (recommended when HOST=0.0.0.0)
AUTH_ENABLED=true
AUTH_PASSWORD=change-this-password
AUTH_COOKIE_NAME=online_cli_auth
AUTH_SESSION_TTL_MS=43200000
# Set true only when serving over HTTPS.
AUTH_COOKIE_SECURE=false

# Remote desktop sidecar integration (disabled by default)
REMOTE_ENABLED=false
REMOTE_AGENT_URL=http://127.0.0.1:3390
REMOTE_DEFAULT_MODE=view
REMOTE_STREAM_FPS=8
REMOTE_JPEG_QUALITY=55
REMOTE_INPUT_RATE_LIMIT_PER_SEC=120
REMOTE_TOKEN_TTL_MS=60000
# Optional max queued remote input events before new events are dropped.
REMOTE_INPUT_MAX_QUEUE=300

# Session controls
MAX_SESSIONS=24
SESSION_IDLE_TIMEOUT_MS=2700000
SESSION_SWEEP_INTERVAL_MS=60000
DEFAULT_COLS=120
DEFAULT_ROWS=30
TMUX_HISTORY_LIMIT=200000
TMUX_MOUSE_MODE=true
SINGLE_CONSOLE_MODE=false
WS_HEARTBEAT_MS=30000

# PTY and tmux behavior
# PTY_COMMAND=
# PTY_ARGS=
# PTY_CWD=
# TMUX_COMMAND=
# TMUX_ARGS=

# Persistence and logging
# SESSION_STATE_FILE=.online-cli/sessions-state.json
LOG_LEVEL=info

# Codex index paths (optional)
# CODEX_HOME=~/.codex
# CODEX_SESSIONS_DIR=
# CODEX_HISTORY_FILE=
# CODEX_EXTRA_SESSIONS_DIRS=
